# =========================
# App
# =========================
NODE_ENV=development
APP_NAME=smart-playlist
APP_URL=http://127.0.0.1:3000
API_URL=http://localhost:4000
PORT=4000
LOG_LEVEL=debug

# =========================
# Spotify OAuth
# =========================
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3000/callback
SPOTIFY_SCOPES=playlist-read-private playlist-read-collaborative

# =========================
# Security / Sessions
# =========================
SESSION_SECRET=replace_with_a_long_random_string
JWT_SECRET=replace_with_another_long_random_string

# =========================
# AI Provider
# =========================
AI_PROVIDER=musicgen

# MusicGen mode: hf_api or local
MUSICGEN_MODE=hf_api

# Hugging Face Inference API
HUGGINGFACE_API_KEY=your_hf_api_key_here
MUSICGEN_MODEL_ID=facebook/musicgen-small
MUSICGEN_ENDPOINT=

# Default generation controls
DEFAULT_TRANSITION_SECONDS=5
DEFAULT_TRANSITION_STYLE=ambient

# Optional file storage for generated transitions
TRANSITIONS_DIR=./tmp/transitions
